{    
    "extends": "eslint:recommended",
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },    
    "rules": {        
        "linebreak-style": ["error", "windows"],
        "require-jsdoc": ["off"],
        "max-len": ["error", 160],
        "no-console": "off"
    }
}